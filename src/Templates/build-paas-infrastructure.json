{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Crear Infraestructura en PaaS de la solucion.",
  "Parameters": {
    "SqlServerInstanceName": {
      "Description": "Nombre de Instancia del RDS",
      "Type": "String"
    },
    "DatabaseUsername": {
      "Description": "El nombre de usuario del Administrador",
      "Type": "String",
      "AllowedPattern": "[a-zA-Z0-9]+",
      "MaxLength": 16,
      "MinLength": 1
    },
    "DatabasePassword": {
      "Description": "El password del usuario Administrador",
      "Type": "String",
      "MaxLength": 41,
      "MinLength": 8
    },
    "InstanceType": {
      "Description": "El tipo de instancia deseado.",
      "Type": "String",
      "AllowedValues": [
        "db.t2.micro",
        "db.t2.small",
        "db.t2.medium",
        "db.m4.large",
        "db.m4.xlarge",
        "db.m4.2xlarge"
      ]
    },
    "SQLEdition": {
      "Description": "Tipo de Edición de SQL.",
      "Type": "String",
      "AllowedValues": [
        "sqlserver-ee",
        "sqlserver-se",
        "sqlserver-ex",
        "sqlserver-web"
      ]
    }
  },
  "Resources": {
    "SQLServerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "SQL Server Security Group",
        "SecurityGroupIngress": {
          "IpProtocol": "tcp",
          "FromPort": 1433,
          "ToPort": 1433,
          "CidrIp": "0.0.0.0/0"
        }
      }
    },
    "SQLDatabase": {
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "VPCSecurityGroups": [
          {
            "Fn::GetAtt": [ "SQLServerSecurityGroup", "GroupId" ]
          }
        ],
        "DBInstanceIdentifier": {
          "Ref": "SqlServerInstanceName"
        },
        "LicenseModel": "license-included",
        "Engine": { "Ref": "SQLEdition" },
        "MultiAZ": false,
        "DBInstanceClass": { "Ref": "InstanceType" },
        "AllocatedStorage": 100,
        "MasterUsername": { "Ref": "DatabaseUsername" },
        "MasterUserPassword": { "Ref": "DatabasePassword" },
        "PubliclyAccessible": true,
        "Tags": [
          {
            "Key": "Name",
            "Value": { "Ref": "SqlServerInstanceName" }
          }
        ],
        "BackupRetentionPeriod": 1
      },
      "DependsOn": "SQLServerSecurityGroup"
    }
  },
  "Outputs": {
    "SQLDatabaseEndpoint": {
      "Description": "Database EndPoint",
      "Value": {
        "Fn::Sub": "${SQLDatabase.Endpoint.Address}:${SQLDatabase.Endpoint.Port}"
      }
    }
  }
}